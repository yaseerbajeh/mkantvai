            "leftValue": "",
            "type": "string"
          },
          "conditions": [
            {
              "id": "check-keywords",
              "leftValue": "={{ $json.message.toLowerCase() }}",
              "rightValue": "",
              "operator": {
                "type": "string",
                "operation": "containsAny",
                "singleValue": false
              }
            }
          ],
          "combinator": "or"
        },
        "options": {}
      },
