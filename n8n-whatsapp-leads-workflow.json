      "notes": "Filter messages containing interest keywords"
    },
    {
      "parameters": {
        "jsCode": "// Extract contact information from WhatsApp message\nconst message = $input.item.json.body.message;\nconst pushName = message.pushName || 'Unknown';\nconst remoteJid = message.key.remoteJid || '';\n\n// Normalize phone number (remove @s.whatsapp.net and keep only digits)\nlet phoneNumber = remoteJid.replace('@s.whatsapp.net', '').replace(/[^0-9]/g, '');\n\n// Extract message text\nconst messageText = message.message || '';\n\nreturn {\n  name: pushName,\n  whatsapp: phoneNumber,\n  message: messageText\n};"
      },
      "id": "extract-contact",
      "name": "Extract Contact Info",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [650, 300]
    },
    {
      "parameters": {
        "conditions": {
          "options": {
